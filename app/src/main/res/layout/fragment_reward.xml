<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RewardFragment">

    <TextView
        android:id="@+id/reward_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textAlignment="center"
        android:textSize="28sp"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <TextView
        android:id="@+id/reward_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:textColor="@color/dark_blue"
        android:textSize="23sp"
        app:layout_constraintTop_toBottomOf="@+id/reward_title"
        tools:layout_editor_absoluteX="10dp">
    </TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toTopOf="@+id/progress_button"
        app:layout_constraintTop_toBottomOf="@+id/reward_subtitle">

        <androidx.constraintlayout.widget.Group
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="reward_text,badge_container" />
    </ScrollView>


    <Button
        android:id="@+id/progress_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/progress_button_text"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        >
    </Button>

    <TextView
        android:id="@+id/reward_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text=""
        android:textColor="@color/dark_blue"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="123dp"
        app:layout_constraintTop_toBottomOf="@+id/reward_subtitle">
    </TextView>

    <TextView
        android:id="@+id/badge_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:textColor="@color/dark_blue"
        android:textSize="23sp"
        app:layout_constraintTop_toBottomOf="@+id/reward_text"
        tools:layout_editor_absoluteX="10dp">
    </TextView>


    <ImageView
        android:id="@+id/badge_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/star_big_on"
        app:layout_constraintTop_toBottomOf="@+id/badge_text"
        app:layout_constraintBottom_toTopOf="@+id/badge_title"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
    </ImageView>

    <TextView
        android:id="@+id/badge_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:textColor="@color/dark_blue"
        android:textSize="23sp"
        app:layout_constraintTop_toBottomOf="@+id/badge_image"
        tools:layout_editor_absoluteX="10dp">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/badge_container">
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>